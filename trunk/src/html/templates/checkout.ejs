<% var title = 'Checkout' %>
<% include _head %>
<% include _tesco_cookie_widget %>

<div class="container" id="top">
  <div class="checkout-header">
    <div class="logo">
      <a href="">Tesco Clubcard</a>
    </div>
  </div>

  <h1 class="visuallyhidden">Checkout</h1>

  <div class="checkout-process" id="nav">
    <div class="process-item completed-step">
      <p>Sign in</p> 
    </div>

    <div class="process-item current-step">
      <p>Delivery &amp; payment</p> 
    </div>

    <div class="process-item">
      <p>Review &amp; place order</p> 
    </div>

    <div class="process-item">
      <p>Order confirmation</p> 
    </div>

    <p class="checkout-process-progress">Step 2 of 4</p>
  </div>



  <form method="post" action="#">

  <div class="product-order-container"  id="content">
    <div class="product-order">
      <div class="checkout-heading">
        <h2>Your order</h2>
        <a href="" class='edit-btn'>Edit</a>
      </div>

      <div class="checkout-items">
        <div class="checkout-item-header">
          <div class="checkout-reward"><p>Item</p></div>
          <div class="checkout-price"><p>Cost</p></div>
        </div>

        <div class="checkout-item">
          <div class="checkout-reward">
            <img src="../img/content/abbotsbury.gif"  alt="placeholder for checkout item"/>
            <h3><a href="#">Abbotsbury Children's Farm</a></h3>
            <p class="checkout-value">£20 money-off token</p>
            <p class="checkout-smallprint">Product code: A3010</p>
            <p class="checkout-smallprint">Delivery method: Post</p>
          </div>
          <div class="checkout-price">
            <p><span class="voucher-cost">Voucher cost: </span>£2.50</p>
          </div>
        </div>

        <div class="checkout-item">
          <div class="checkout-reward">
            <img src="../img/content/merlin.gif" alt="placeholder for checkout item" />
            <h3><a href="#">Merlin Entertainment Group</a></h3>
            <p class="checkout-value">1 x 2 for 1 entry</p>
            <p class="checkout-smallprint">Product code: A3010</p>
            <p class="checkout-smallprint">Delivery method: Post</p>
          </div>
          <div class="checkout-price">
            <p><span class="voucher-cost">Voucher cost: </span>£0.00</p>
            <p class="price-note">Clubcard perk</p>
          </div>
        </div>

        <div class="checkout-item">
          <div class="checkout-reward">
            <img src="../img/content/ipad.gif" alt="placeholder for checkout item" />
            <h3><a href="#">iPad 2 with Wifi</a></h3>
            <p class="checkout-value">1 x Black, 32GB</p>
            <p class="checkout-smallprint">Product code: A3010</p>
            <p class="checkout-smallprint">Delivery method: Post</p>
          </div>
          <div class="checkout-price">
            <p><span class="voucher-cost">Voucher cost: </span>£0.00</p>
          </div>
        </div>

        <div class="checkout-item last">
          <div class="checkout-reward">
            <img src="../img/content/avios.gif" alt="placeholder for checkout item" />
            <h3><a href="#">Avios</a></h3>
            <p class="checkout-value">600 Avios</p>
            <p class="checkout-smallprint">Product code: A3010</p>
            <p class="checkout-smallprint">Delivery method: Post</p>
          </div>
          <div class="checkout-price">
            <p><span class="voucher-cost">Voucher cost: </span>£2.50</p>
          </div>
        </div>

        <div class="checkout-item-total">
          <div class="checkout-total-txt">
            <p>Total Clubcard voucher cost</p>
          </div>
          <div class="checkout-price">
            <p>£220.00</p>
          </div>
        </div>
      </div>
    </div>

    <div class="order-error-container">
      <div class="order-error-header">
        <h2 class="error-warning">There has been an error with a product in your order</h2>
        <p>Sorry but you have exceeded the maximum you can order. This item has been removed from your order.</p> 
      </div>
      <div class="order-error-products">
        <div class="checkout-items">
          <div class="checkout-item">
            <div class="checkout-reward">
              <img src="../img/content/abbotsbury.gif" alt="placeholder for checkout item"/>
              <h3>Abbotsbury Subtropical Gardens</h3>
              <p class="checkout-value">£20 money-off token</p>
              <p class="checkout-smallprint">Product code: A3010</p>
              <p class="checkout-smallprint">Delivery method: Post</p>
            </div>
          </div>
        </div>
      </div>

      <div class="order-error-header">
        <p>Sorry but this product is no longer available. This item has been removed from your order.</p> 
      </div>
      <div class="order-error-products">
        <div class="checkout-items">
          <div class="checkout-item">
            <div class="checkout-reward">
              <img src="../img/content/abbotsbury.gif" alt="placeholder for checkout item"/>
              <h3>Abbotsbury Subtropical Gardens</h3>
              <p class="checkout-value">£20 money-off token</p>
              <p class="checkout-smallprint">Product code: A3010</p>
              <p class="checkout-smallprint">Delivery method: Post</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="checkout-additional-details">
      <div class="checkout-heading">
        <h2>Additional product details</h2>
        <p>Some of the products you are ordering require additional information</p>
      </div>

      <div class="checkout-additional-items">
        <div class="checkout-additional-item-header">
          <div class="checkout-additional-description"><p>Item description</p></div>
          <div class="checkout-additional-information"><p>Additional information</p></div>
        </div>
        <div class="checkout-additional-item">
          <div class="checkout-additional-description">
            <p class="checkout-additional-title">Avios</p>
            <p class="checkout-addtional-details">
              600 Avios
            </p>
          </div>
          <div class="checkout-additional-information">
            <div class="control-group">
              <label for="additional-item">Flying club membership number</label>
              <input class="txt" name="membership_number" type="text" placeholder="Enter your membership number" id="additional-item" />
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="checkout-delivery-details checkout-delivery-details-summary ">
      <div class="checkout-heading">
        <h2>Your delivery details</h2>
      </div>
      <div class="delivery-item">
        <div class="delivery-label"><p>Postal items will be sent to:</p></div>
        <div class="delivery-details">
          <p>Mr Aviral Gupta</p>
          <p>70 Rosslyn Ave</p>
          <p>Romford, RM3 0DJ</p>
        </div>
        <div class="delivery-change-action">
          <p><a href="" class="edit-address">Edit my account address</a></p>
        </div>
      </div>

      <div class="delivery-item">
        <div class="delivery-label"><p>Email items will be sent to:</p></div>
        <div class="delivery-details"><p>agupta@hotmail.com</p></div>
        <div class="delivery-change-action"> <p><a href="" class="edit-email">Edit my account email</a></p></div>
      </div>
    </div>

    <div class="checkout-delivery-details checkout-delivery-details-edit checkout-delivery-details-edit-address">
      <div class="checkout-heading">
        <h2>Your delivery details</h2>
      </div>
      <div class="delivery-item">
        <div class="delivery-label"><p>Postal items will be sent to:</p></div>
        <div class="delivery-details">
          <div class="load-message">
           <!--  <p>Error message encountered when submitting address form </p> -->
           <div class="loading-graphic"></div>
          </div>

          <fieldset>
            <div class="control-group">
              <label for="title">Title</label>
              <div class="controls">
                <select id="title">
                  <option selected="selected">Mr</option>
                  <option>Mrs</option>
                  <option>Miss</option>
                  <option>Dr</option>
                </select>
              </div>
            </div>
            <div class="control-group">
              <label for="first_name">First name</label>
              <div class="controls">
                <input id="first_name" type="text" value="Aviral" />
              </div>
            </div>
            <div class="control-group">
              <label for="surname">Surname</label>
              <div class="controls">
                <input id="surname" type="text" value="Gupta" />
              </div>
            </div>
            <div class="control-group find_address">
              <label for="post_code">Post code</label>
              <div class="controls">
                <input id="post_code" type="text" value="RM3 0DJ" class="input-small" />
                <a href="#" class="find-address">Find address</a>
              </div>
            </div>
            <div class="control-group address">
              <label for="house">Or House name/number</label>
              <div class="controls">
                <input id="house" type="text" value="70" />
              </div>
              <label for="street">Street</label>
              <div class="controls">
                <input type='text' id="street" value="Lewis gardens"/>
              </div>
              <label for="town">Town/city</label>
              <div class="controls">
                <input type='text' id="town" value="London"/>
              </div>
            </div>
            <div class="control-group">
              <div class="controls">
                <label class="checkbox">
                  <input type="checkbox" name="confirm" class="confirm" value="1" />
                  I confirm that I want to make this my main account address 
                </label>
              </div>
            </div>
            <div class="form-actions">
              <button type="submit" class="btn btn-submit" name="submit_address">Submit</button>
              <button class="btn btn-cancel">Cancel</button>
            </div>
          </fieldset>
        </div>
      </div>
    </div>

    <div class="checkout-delivery-details checkout-delivery-details-edit checkout-delivery-details-edit-email">
      <div class="checkout-heading">
        <h2>Your delivery details</h2>
      </div>
      <div class="delivery-item">
        <div class="delivery-label"><p>Email items will be sent to:</p></div>
        <div class="delivery-details">
          <div class="load-message">
           <!--  <p>Error message encountered when submitting email form </p> -->
           <div class="loading-graphic"></div>
          </div>
          <fieldset>
            <div class="control-group">
              <label for="email">Email</label>
              <div class="controls">
                <input id="email" type="text" value="agupta@hotmail.com" />
              </div>
            </div>
            <div class="control-group">
              <div class="controls">
                <label class="checkbox" for="confirm">
                  <input type="checkbox" name="confirm" class="confirm" value="1" id="confirm"/>
                  I confirm that I want to make this my main account email 
                </label>
              </div>
            </div>
            <div class="form-actions">
              <button type="submit" class="btn btn-submit" name="submit_email">Submit</button>
              <button class="btn btn-cancel">Cancel</button>
            </div>
          </fieldset>
        </div>
      </div>
    </div>
  </div>

  <div class="row-fluid">
    <div class="voucher-payment-container">

      <div class="load-message">
         <!-- <p>Error message encountered when adding vouchers </p> -->
      </div>

      <div class="checkout-payment-details-container product-order-container">

        <div class="checkout-payment-details">
          <div class="checkout-heading">
            <h2>Voucher payment details</h2>
            <p class="error-warning">Sorry you do not have enough vouchers to complete your order. You can either add additional vouchers below or <a href="#">remove some rewards from your basket</a>.</p>
            <p>Select the vouchers you require for your order. Use 'Add a voucher' to add any additional vouchers manually.</p>
          </div>

          <div class="payment-items-container">
            <div class="payment-items">
              <div class="payment-item-header">
                <div class="payment-voucher-code"><p><span>Voucher</span> code</p></div>
                <div class="payment-expiry"><p>Expiry <span>date</span></p></div>
                <div class="payment-voucher"><p><span>Voucher</span> value</p></div>
              </div>

              <div class="payment-item">
                <div class="payment-voucher-code"><p>098345739567</p></div>
                <div class="payment-expiry">03/03/2013</div>
                <div class="payment-voucher"><p>£50.00</p>
                  <div class="payment-ctrl">
                    <div class="control-group">
                      <label class="visuallyhidden" for="voucher1">Remove voucher</label>
                      <input class="checkbox" name="vouchers[]" value="098345739567" type="checkbox" id="voucher1" data-voucher-code="098345739567"/>
                    </div>
                  </div>
                </div>
              </div>

              <div class="payment-item">
                <div class="payment-voucher-code"><p>493486201024</p></div>
                <div class="payment-expiry">03/03/2013</div>
                <div class="payment-voucher"><p>£50.00</p>
                  <div class="payment-ctrl">
                    <div class="control-group">
                      <label class="visuallyhidden" for="voucher2">Remove voucher</label>
                      <input class="checkbox" name="vouchers[]" value="493486201024" type="checkbox" id="voucher2" data-voucher-code="493486201024"/>
                    </div>
                  </div>
                </div>
              </div>

              <div class="payment-item">
                <div class="payment-voucher-code"><p>368653109573</p></div>
                <div class="payment-expiry">03/03/2013</div>
                <div class="payment-voucher"><p>£50.00</p>
                  <div class="payment-ctrl">
                    <div class="control-group">
                      <label class="visuallyhidden" for="voucher3">Remove voucher</label>
                      <input class="checkbox" name="vouchers[]" value="368653109573" type="checkbox" id="voucher3" data-voucher-code="368653109573"/>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          

            <div class="payment-total">
              <div class="payment-total-item payment-total-value">
                <p><span class="payment-total-txt">
                  <span>Total voucher value selected</span>
                </span>

                <span class="payment-total-amount">
                  <span class='payment-total-amount-value'>£5.50</span>
                </span></p>
              </div>

              <div class="payment-discount">
                <label for="manual-voucher">Add a voucher</label>
                <div class="control-group">
                  <div class="controls">
                    <input name="voucher_code" class="txt" type="text" placeholder="Enter voucher code"  id="manual-voucher"/>
                  </div>
                  <div class="controls">
                    <input class="submit btn" name="add_voucher" value="Add voucher"  type="submit"/>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="product-summary-container">
            <div class="product-summary">
              <div class="product-summary-heading">
                <h2>Voucher payment summary</h2>
              </div>
              <div class="summary-items">
                <div class="summary-item">
                  <p class="summary-txt">Order total</p>
                  <p class="summary-amount">£245.50</p>
                </div>
                <div class="summary-item">
                  <p class="summary-txt">Vouchers selected</p>
                  <p class="summary-amount">£0</p>
                </div>
                <div class="update-btn">
                  <a href="" class="btn default-btn"><i class="icon-refresh"></i>Update</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div> 
    </div>
  </div> 

  <div class="checkout-review checkout-review-review">
    <input class="submit primary-btn" name="submit_review" value="Review your order" type="submit"/>
  </div>

  </form>

  <div class="clubcard-secure-message">
    <h3>Tesco Clubcard secure checkout</h3>
    <h4 class="subhead">Our safe shopping guarantee</h4>
    <p>It is safe to shop at Tesco.com. You can be totally confident when you are shopping with Tesco.com</p>
  </div>
</div>

<div class="footer checkout-footer">
  <div class="container">
    <div class="footer-inner"> 
      <p>
        <img src="../img/interface/strapline.png" alt="Every little helps">
        <span>&copy; Tesco.com 2013</span>
        <span>All Rights Reserved</span>
      </p>
    </div>
  </div>
</div>

