<% var title = 'Checkout' %>
<% include _head %>
<% include _tesco_cookie_widget %>

<div class="container" id="top">
  <div class="checkout-header">
    <div class="logo">
      <a href="">Tesco Clubcard</a>
    </div>
  </div>

  <h1 class="visuallyhidden">Checkout</h1>

  <div class="checkout-process" id="nav">
    <div class="process-item completed-step">
      <p>Sign in</p> 
    </div>

    <div class="process-item completed-step">
      <p>Delivery &amp; payment</p> 
    </div>

    <div class="process-item current-step">
      <p>Review &amp; place order</p> 
    </div>

    <div class="process-item">
      <p>Order confirmation</p> 
    </div>

    <p class="checkout-process-progress">Step 3 of 4</p>
  </div>

  <div class="product-order-container" id="content">
    <div class="product-order">
      <div class="checkout-heading">
        <h2>Your order</h2>
        <a href="" class='edit-btn'>Edit</a>
      </div>

      <div class="checkout-items">
        <div class="checkout-item-header">
          <div class="checkout-reward"><p>Item</p></div>
          <div class="checkout-price"><p>Cost</p></div>
        </div>
        <div class="checkout-item">
          <div class="checkout-reward">
            <img src="../img/content/plp-listing-placeholder.gif"  alt="placeholder for checkout item"/>
            <h3>Abbotsbury Subtropical Gardens</h3>
            <p class="checkout-value">£20 money-off token</p>
            <p class="checkout-smallprint">Product code: A3010</p>
            <p class="checkout-smallprint">Delivery method: Post</p>
          </div>
          <div class="checkout-price">
            <p><span class="voucher-cost">Voucher cost: </span>£5.00</p>
          </div>
        </div>
        <div class="checkout-item">
          <div class="checkout-reward">
            <img src="../img/content/plp-listing-placeholder.gif" alt="placeholder for checkout item" />
            <h3>Abbotsbury Subtropical Gardens</h3>
            <p class="checkout-value">£20 money-off token</p>
            <p class="checkout-smallprint">Product code: A3010</p>
            <p class="checkout-smallprint">Delivery method: Post</p>
          </div>
          <div class="checkout-price">
            <p><span class="voucher-cost">Voucher cost: </span>£5.00</p>
          </div>
        </div>
        <div class="checkout-item last">
          <div class="checkout-reward">
            <img src="../img/content/plp-listing-placeholder.gif" alt="placeholder for checkout item" />
            <h3>Abbotsbury Subtropical Gardens</h3>
            <p class="checkout-value">£20 money-off token</p>
            <p class="checkout-smallprint">Product code: A3010</p>
            <p class="checkout-smallprint">Delivery method: Post</p>
          </div>
          <div class="checkout-price">
            <p><span class="voucher-cost">Voucher cost: </span>£0.00</p>
            <p class="price-note">Clubcard perk</p>
          </div>
        </div>

        <div class="checkout-item-total">
          <div class="checkout-total-txt">
            <p>Total Clubcard voucher cost</p>
          </div>
          <div class="checkout-price">
            <p>£245.00</p>
          </div>
        </div>
      </div>
    </div>

    <div class="checkout-additional-details">
      <div class="checkout-heading">
        <h2>Additional product details</h2>
        <p>Some of the products you are ordering require additional information</p>
        <a href="" class='edit-btn'>Edit</a>
      </div>

      <div class="checkout-additional-items">
        <div class="checkout-additional-item-header">
          <div class="checkout-additional-description"><p>Item description</p></div>
          <div class="checkout-additional-information"><p>Additional information</p></div>
        </div>
        <div class="checkout-additional-item">
          <div class="checkout-additional-description">
            <p class="checkout-additional-title">Avios</p>
            <p class="checkout-addtional-details">
              600 Avios
            </p>
          </div>
          <div class="checkout-additional-information">
            <div class="control-group">
              <p class="additional-info-label">Flying club membership number</p>
              <p>0987654321</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="checkout-delivery-details checkout-delivery-details-summary">
      <div class="checkout-heading">
        <h2>Your delivery details</h2>
      </div>
      <div class="delivery-item">
        <div class="delivery-label"><p>Postal items will be sent to:</p></div>
        <div class="delivery-details">
          <p>Mr Aviral Gupta</p>
          <p>70 Rosslyn Ave</p>
          <p>Romford, RM3 0DJ</p>
        </div>
        <div>
          <p><a href="" class="edit-address">Edit</a></p>
        </div>
      </div>

      <div class="delivery-item">
        <div class="delivery-label"><p>Email items will be sent to:</p></div>
        <div class="delivery-details"><p>agupta@hotmail.com</p></div>
        <div><p><a href="" class="edit-email">Edit</a></p></div>
      </div>
    </div>

    <div class="checkout-delivery-details checkout-delivery-details-edit checkout-delivery-details-edit-address">
      <div class="checkout-heading">
        <h2>Your delivery details</h2>
      </div>
      <div class="delivery-item">
        <div class="delivery-label"><p>Postal items will be sent to:</p></div>
      </div>
    </div>

    <div class="checkout-delivery-details checkout-delivery-details-edit checkout-delivery-details-edit-email">
      <div class="checkout-heading">
        <h2>Your delivery details</h2>
      </div>
      <div class="delivery-item">
        <div class="delivery-label"><p>Email items will be sent to:</p></div>
      </div>
    </div>
  </div>

  <div class="row-fluid">
    <div class="voucher-payment-container">
      <a href="" class='edit-btn'>Edit</a>
      <div class="checkout-payment-details-container product-order-container">
        <div class="checkout-payment-details">
          <div class="checkout-heading">
            <h2>Voucher payment details</h2>
            <p>Select the vouchers you require for your order. Use 'Add a voucher' to add any additional vouchers manually.</p>
          </div>
          <div class="payment-items-container">
            <div class="payment-items">
              <div class="payment-item-header">
                <div class="payment-voucher-code"><p><span>Voucher</span> code</p></div>
                <div class="payment-expiry"><p>Expiry <span>date</span></p></div>
                <div class="payment-voucher"><p><span>Voucher</span> value</p></div>
              </div>
              <div class="payment-item">
                <div class="payment-voucher-code"><p>098345739567</p></div>
                <div class="payment-expiry">03/03/2013</div>
                <div class="payment-voucher"><p>£50.00</p></div>
              </div>
              <div class="payment-item">
                <div class="payment-voucher-code"><p>493486201024</p></div>
                <div class="payment-expiry">03/03/2013</div>
                <div class="payment-voucher"><p>£50.00</p></div>
              </div>
              <div class="payment-item">
                <div class="payment-voucher-code"><p>368653109573</p></div>
                <div class="payment-expiry">03/03/2013</div>
                <div class="payment-voucher"><p>£50.00</p></div>
              </div>
            </div>

            <div class="payment-total">
              <div class="payment-total-item payment-total-value">
                <p><span class="payment-total-txt">
                  <span>Total voucher value selected</span>
                </span>

                <span class="payment-total-amount">
                  <span class='payment-total-amount-value'>£5.50</span>
                </span></p>
              </div>
            </div>
          </div>
          <div class="product-summary-container">
            <div class="product-summary">
              <div class="product-summary-heading">
                <h2>Voucher payment summary</h2>
              </div>
              <div class="summary-items">
                <div class="summary-item">
                  <p class="summary-txt">Order total</p>
                  <p class="summary-amount">£245.50</p>
                </div>
                <div class="summary-item">
                  <p class="summary-txt">Vouchers selected</p>
                  <p class="summary-amount">£245.50</p>
                </div>
                <div class="summary-item">
                  <p class="summary-txt">Vouchers remaining</p>
                  <p class="summary-amount">£15.00</p>
                </div>
                <div class="summary-item">
                  <p class="summary-txt">Change credited back to your account</p>
                  <p class="summary-amount">£15.00</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div> 
    </div>
  </div> 

  <div class="checkout-review checkout-review-confirm checkout-review-confirmation-container">
    <div class="checkout-heading">
      <h2>Confirm your order</h2>
      <p>By clicking on the "confirm" button, you confirm your acceptance to <a href="" target="_blank">Tesco.com's terms and conditions</a> and <a href="" target="_blank">Clubcard's terms and conditions</a>.</p>
    </div>
  </div>

  <div class="checkout-review checkout-review-confirm">
    <a class="submit secondary-btn">&laquo; Delivery &amp; Payment</a>
    <input class="submit primary-btn" value="Confirm your order"  type="submit"/>
  </div>

  <div class="clubcard-secure-message">
    <h3>Tesco Clubcard secure checkout</h3>
    <h4 class="subhead">Our safe shopping guarantee</h4>
    <p>It is safe to shop at Tesco.com. You can be totally confident when you are shopping with Tesco.com</p>
  </div>
</div><!-- end of container -->    

<div class="footer checkout-footer">
  <div class="container">
    <div class="footer-inner"> 
      <p>
        <img src="../img/interface/strapline.png" alt="Every little helps">
        <span>&copy; Tesco.com 2013</span>
        <span>All Rights Reserved</span>
      </p>
    </div>
  </div>
</div>

<% include _foot %>