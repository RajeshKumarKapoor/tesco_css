      <label for="sort-select" class='visuallyhidden'>Sort results</label>
      <select id="sort-select">
        <option>Sort</option>
        <option value="default">alphabetical A-Z</option>
        <option value="option1">alphabetical Z-A</option>
        <option value="option2">Price - low to high</option>
        <option value="option3">Price - high to low</option>
        <option value="option4">Featured</option>
        <option value="option5">Top rated</option>
        <option value="option5">Most reviewed</option>
      </select>
      <input class="submit btn sort-listing-btn" type="submit" value="Sort listings" />
    </div>
  </div>

